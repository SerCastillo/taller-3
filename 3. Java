 public void ejercicio1(int x) {
        Scanner entrada = new Scanner(System.in);

        System.out.println("Digite el tama√±o del vector: ");

        x = entrada.nextInt();
        int[][] a = new int[x][x];
        int i = 0, j = 0, k = 0;
        for (i = 0; i < x; i++) {
            for (j = 0; j < x; j++) {
                System.out.println("Digite numero en la posicion [" + i + "][" + j + "]:");
                a[i][j] = entrada.nextInt();
            }
        }
        for (i = 0; i < a.length; i++) {
            for (j = 0; j < a.length; j++) {
                System.out.print(a[i][j]);
            }
            System.out.println("");
        }
        for (i = 0; i < a.length; i++) {
            for (j = 0; j < a.length; j++) {
                if (a[i][j] % 2 == 0) {
                    System.out.println("Par: " + a[i][j]);

                } else {
                    System.out.println("Impar: " + a[i][j]);
                }
                if (a[i][j] > 0) {
                    System.out.println("Positivo: " + a[i][j]);
                } else {
                    System.out.println("Negativo: " + a[i][j]);
                }

            }

        }

    }

}
