 public class Par_Impar_Pos_Neg {
    

public void ejercicio1(int x) {
        Scanner entrada = new Scanner(System.in);

        System.out.println("Digite el tama√±o del vector: ");

        x = entrada.nextInt();
        int[][] a = new int[x][x];
        int i = 0, j = 0, k = 0;
        for (i = 0; i < x; i++) {
            for (j = 0; j < x; j++) {
                System.out.println("Digite numero en la posicion [" + i + "][" + j + "]:");
                a[i][j] = entrada.nextInt();
            }
        }
        for (i = 0; i < a.length; i++) {
            for (j = 0; j < a.length; j++) {
                System.out.print(a[i][j]);
            }
            
        }
        System.out.println("");
        System.out.println("Los pares son: ");
        for (i = 0; i < a.length; i++) {
            for (j = 0; j < a.length; j++) {
                if (a[i][j] % 2 == 0) {
                    System.out.println(a[i][j]);

                }
            }    
        }
        System.out.println("Los impares son: ");
         for (i = 0; i < a.length; i++) {
            for (j = 0; j < a.length; j++) {
        
        
            
                if (a[i][j]%2!=0){
                    System.out.println( a[i][j]);
                }
                    
            }
               
        }
         System.out.println("Los numeros positivos son: ");
          for (i = 0; i < a.length; i++) {
            for (j = 0; j < a.length; j++) {
        
        
            
                if (a[i][j]>0){
                    System.out.println( a[i][j]);
                }
                    
            }
               
        }
          System.out.println("Los numeros negativos son: ");
          for (i = 0; i < a.length; i++) {
            for (j = 0; j < a.length; j++) {
        
        
            
                if (a[i][j]<0){
                    System.out.println( a[i][j]);
                }
                    
            }
               
        }

        }

    }
